<div class="detail-left">
    <h2>Event Detail for <%=h @event.id %></h2>
    <table>
        <tr>
            <th>Signature</th>
            <td><%=h @event.sig_name %></td>
        </tr>
        <tr>
            <th>SigID</th>
            <td><%= link_to @event.sig_id, 
                :controller => "signatures", :action => "detail", :id => @event.sig_id %></td>
        </tr>
        <tr>
            <th>Sensor</th>
            <td><%=h @event.sid %></td>
        </tr>
        <tr>
            <th>CID</th>
            <td><%=h @event.cid %></td>
        </tr>
        <tr>
            <th>Timestamp</th>
            <td><%=h @event.timestamp %></td>
        </tr>
        <tr>
            <th>Source</th>
            <td><%= link_to @event.ip_src_string, 
                :controller => 'iphosts', :action => 'detail', :id => @event.ip_src_string %> 
                (<%=h @event.ip_src_dns %>)
            </td>
        </tr>
        <tr>
            <th>Destination</th>
            <td><%= link_to @event.ip_dst_string, 
                :controller => 'iphosts', :action => 'detail', :id => @event.ip_dst_string %> 
                (<%=h @event.ip_dst_dns %>)
            </td>
        </tr>
    </table>
</div>
<div class="detail-right">
<%= packet_headers @event.iphdr %>
</div>

