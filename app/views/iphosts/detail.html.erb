<div class="detail-left">
    <h2>IP Host Detail for <%=h @iphost.ip_string %></h2>
    <table>
        <tr>
            <th>Activity Index</th>
            <td><%=h @iphost.act_idx %></td>
        </tr>
        <tr>
            <th>Alerts as Source</th>
            <td><%= link_to_unless_zero @iphost.src_ev_cnt,
                :controller => 'alerts',
                :action => 'summary',
                :ip_src => @iphost.ip_string %></td>
        </tr>
        <tr>
            <th>Alerts as Dest</th>
            <td><%= link_to_unless_zero @iphost.dst_ev_cnt,
                :controller => 'alerts',
                :action => 'summary',
                :ip_dst => @iphost.ip_string %></td>
        </tr>
        <tr>
            <th>Signatures as Source</th>
            <td><%= link_to_unless_zero @iphost.src_sig_cnt,
                :controller => 'signatures',
                :action => 'summary',
                :ip_src => @iphost.ip_string %></td>
        </tr>
         <tr>
            <th>Signatures as Dest</th>
            <td><%= link_to_unless_zero @iphost.dst_sig_cnt,
                :controller => 'signatures',
                :action => 'summary',
                :ip_dst => @iphost.ip_string %></td>
        </tr>
        <tr>
            <th>First Seen as Src</th>
            <td><%=link_to_if @fe_as_src, @fe_as_src_timestamp, 
                :controller => 'alerts', 
                :action => 'detail', 
                :id => @fe_as_src.to_param %></td>
        </tr>
        <tr>
            <th>Last Seen as Src</th>
            <td><%=link_to_if @le_as_src, @le_as_src_timestamp, 
                :controller => 'alerts', 
                :action => 'detail', 
                :id => @le_as_src.to_param %></td>
        
        <tr>
            <th>First Seen as Dst</th>
            <td><%=link_to_if @fe_as_dst, @fe_as_dst_timestamp,
                :controller => 'alerts',
                :action => 'detail',
                :id => @fe_as_dst.to_param %></td>
        </tr>
        <tr>
            <th>Last Seen as Dst</th>
            <td><%=link_to_if @le_as_dst, @le_as_dst_timestamp,
                :controller => 'alerts',
                :action => 'detail',
                :id => @le_as_dst.to_param %></td>
        </tr>
    </table>
</div>
<div class="detail-right">
</div>

