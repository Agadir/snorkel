<html>
<head>
    <title>Snorkel: Snort NIDS Console</title>
    <%= stylesheet_link_tag "snorkel", :media => "all" %>
    <%= javascript_include_tag :defaults %>
</head>
<body id="console">
<div id="columns">
    <div id="stats">
        <table>
            <th>Totals</th>
            <tr>
                <td>Alerts</td>
                <td class="num-cell"><%=h event_count %></td>
            </tr>
            <tr>
                <td>Signatures</td>
                <td class="num-cell"><%=h sig_count %></td>
            </tr>
            <tr>
                <td>Source IPs</td>
                <td class="num-cell"><%=h src_ip_count %></td>
            </tr>
            <tr>
                <td>Dest IPs</td>
                <td class="num-cell"><%=h dst_ip_count %></td>
            </tr>
        </table>
    </div>
    <div id="cons-ctl-bar">
        <table>
            <tr>
                <th>Views</th>
            </tr>
            <tr>
                <td id="view-sig-btn" class="btn" onclick="<%= remote_function( :url => { :action => 'signatures' }) %>">Signatures</td>
                </tr>
            <tr>
                <td id="view-alert-btn" class="btn" onclick="<%= remote_function( :url => { :action => 'alerts' }) %>">Alerts</td>
            </tr>
        </tr>
    </table>
    </div>
    <div id="main">
        <%= yield :layout %> 
    </div>
</div>
</body>
</html>

