<div class="summary-left">
    <h2>Signature Filter</h2>
    <% form_tag({:controller => 'signatures', :action => 'summary'}, :method => 'get') do %>
        <table>
            <tr>
                <th><%= label_tag(:sig_name, 'Signature Name') %></th>
                <td><%= text_field_tag(:sig_name, params[:sig_name]) %></td>
            </tr>
            <tr>
                <th><%= label_tag(:pri, 'Priority') %></th>
                <td><%= text_field_tag(:pri, params[:pri]) %></td>
            </tr>
            <tr>
                <th><%= label_tag(:min_cnt, 'Min Count') %></th>
                <td><%= text_field_tag(:min_cnt, params[:min_cnt]) %></td>
            </tr>
            <tr>
                <th><%= label_tag(:max_cnt, 'Max Count') %></th>
                <td><%= text_field_tag(:max_cnt, params[:max_cnt]) %></td>
            </tr>
            <tr>
                <th><%= submit_tag("Filter") %></th>
            </tr>
        </table>
    <% end %>
</div>
<div class="summary-right">
    <h2>Signatures</h2>
    <table id="sig-table">
        <tr>
            <th>sig</th>
            <th>cls</th>
            <th>pri</th>
            <th><%= order_control 'name', :field => 'sig_name' %></th>
            <th><%= order_control 'count', :field => 'event_count' %></th>
        </tr>
        <%= render(:partial => "signature_row", :collection =>  @signatures) %>
    </table>
    <hr/>
    <div id="pager-ctl"><%= pager_control @summary_pager %></div>
</div>
